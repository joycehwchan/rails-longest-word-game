<h1 class="text-5xl font-bold mb-6">Longest Word</h1>

<p class="mt-4 mb-10 text-lg">Your current score: <%= session[:score] %></p>

<div class="flex justify-around gap-2 mb-6">
  <p><%= link_to "New grid", root_path,
          class: "cursor-pointer border border-gray-500 bg-gray-50 text-gray-500
                  px-6 py-2 text-lg h-14
                  hover:shadow-md hover:border-gray-800 hover:text-gray-800
                  flex justify-center items-center"%></p>
  <p><%= link_to "Reset score", reset_path,
          class: "cursor-pointer border border-gray-500 bg-gray-50 text-gray-500
                  px-6 py-2 text-lg h-14
                  hover:shadow-md hover:border-gray-800 hover:text-gray-800
                  flex justify-center items-center"%></p>
</div>

<div class="grid gap-2 grid-cols-4 md:grid-cols-5 lg:grid-cols-6 mb-6">
  <% @grid.each do |grid| %>
    <div class="bg-gray-900 text-gray-50 text-2xl cursor-default
                w-16 h-16 flex justify-center justify-self-center items-center">
      <%= grid %>
    </div>
  <% end %>
</div>

<div class="shadow-lg bg-white bg-opacity-40 px-8 py-8 mx-auto">
  <form action="/score" method="POST" data-turbo="false">
    <input type="word"
           name="guess"
           placeholder="word"
           class="mb-2 h-14 px-4 text-lg text-center w-full
                placeholder-gray-400 border border-gray-800">
    <input type="submit"
           value="Guess word"
           class="mb-2 h-14 px-4 text-lg cursor-pointer w-full bg-gray-800 text-gray-50
                  hover:bg-gray-700 hover:shadow-md
                  flex justify-center items-center">
    <%= hidden_field_tag :grid, @grid %>
    <%= hidden_field_tag :start_time, @start_time %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
